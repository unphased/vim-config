set info size:time
# interpreter for shell commands
set shell sh

# set '-eu' options for shell commands
# These options are used to have safer shell commands. Option '-e' is used to
# exit on error and option '-u' is used to give error for unset variables.
# Option '-f' disables pathname expansion which can be useful when $f, $fs, and
# $fx variables contain names with '*' or '?' characters. However, this option
# is used selectively within individual commands as it can be limiting at
# times.
set shellopts '-eu'

# set internal field separator (IFS) to "\n" for shell commands
# This is useful to automatically split file names in $fs and $fx properly
# since default file separator used in these variables (i.e. 'filesep' option)
# is newline. You need to consider the values of these options and create your
# commands accordingly.
set ifs "\n"

# leave some space at the top and the bottom of the screen
set scrolloff 10

# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# use enter for shell commands
map <enter> shell

# best-attempt viewer (your custom `cmd open`)
map <right> open
map l open

# show the result of execution of previous commands
map ` !true

# execute current file (must be executable)
map x $$f
map X !$f

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# # define a custom 'open' command
# # This command is called when current file is not a directory. You may want to
# # use either file extensions and/or mime types here. Below uses an editor for
# # text files and a file opener for the rest.
# cmd open &{{
#     case $(file --mime-type -Lb $f) in
#         text/*) lf -remote "send $id \$$EDITOR \$fx";;
#         *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
#     esac
# }}

cmd open ${{
    set -f
    exec 2>> ~/.lf_open.debug  # keep the trace
    set -x                          # remove when done

    warn() {
        printf '%s\n' "$*" >&2
        if command -v lf >/dev/null 2>&1; then
            lf -remote "send $id echo '$*'" 2>/dev/null || true
        fi
    }

    mime=$(file --mime-type -Lb "$f")        # e.g. text/plain, application/octet-stream
    size=$(stat -c%s "$f" 2>/dev/null || stat -f%z "$f")

    view_file() {
        if [ "${size:-0}" -gt 2097152 ]; then
            less -R "$1"
        else
            if command -v bat >/dev/null 2>&1; then
                bat --paging=always "$1"
            else
                warn "bat not found; using less"
                less -R "$1"
            fi
        fi
    }

    view_stream() {
        if [ "${size:-0}" -gt 2097152 ]; then
            less -R
        else
            if command -v bat >/dev/null 2>&1; then
                bat --paging=always --file-name "$1"
            else
                warn "bat not found; using less"
                less -R
            fi
        fi
    }

    view_jsonl_file() {
        if command -v jq >/dev/null 2>&1 && command -v bat >/dev/null 2>&1; then
            render_jsonl_with_stable_lines "$1"
        elif command -v jq >/dev/null 2>&1; then
            jq -C . "$1" | less -R
        else
            warn "jq or bat not found; using default viewer"
            view_file "$1"
        fi
    }

    view_jsonl_stream() {
        if command -v jq >/dev/null 2>&1 && command -v bat >/dev/null 2>&1; then
            render_jsonl_with_stable_lines - "$1"
        elif command -v jq >/dev/null 2>&1; then
            jq -C . | less -R
        else
            warn "jq or bat not found; using default viewer"
            view_stream "$1"
        fi
    }

    render_jsonl_with_stable_lines() {
        input="$1"
        label="${2:-$1}"
        line_no=0

        if [ "$input" = "-" ]; then
            src="/dev/stdin"
        else
            src="$input"
        fi

        {
            printf 'File: %s\n\n' "$label"
            while IFS= read -r line || [ -n "$line" ]; do
                line_no=$((line_no + 1))
                if pretty=$(printf '%s\n' "$line" | jq . 2>/dev/null); then
                    printf '%s\n' "$pretty" |
                        bat --paging=never --style=plain --color=always --language=json |
                        awk -v n="$line_no" 'NR == 1 { printf "%6d ║ %s\n", n, $0; next } { printf "       ║ %s\n", $0 }'
                    render_prettified_strings_for_jsonl_record "$line"
                else
                    printf '%6d ║ %s\n' "$line_no" "$line"
                fi
            done < "$src"
        } | less -R
    }

    render_prettified_strings_for_jsonl_record() {
        record="$1"
        paths_tmp=$(mktemp "/tmp/lf_jsonl_paths.XXXXXX")
        has_strings=0

        if ! printf '%s\n' "$record" | jq -c 'paths(strings)' > "$paths_tmp" 2>/dev/null; then
            rm -f "$paths_tmp"
            return
        fi

        while IFS= read -r path_json || [ -n "$path_json" ]; do
            [ -z "$path_json" ] && continue

            if [ "$has_strings" -eq 0 ]; then
                printf '       ║ ~~ prettified strings (display-only; not literal JSON) ~~\n'
                has_strings=1
            fi

            path_label=$(printf '%s\n' "$path_json" | jq -r 'reduce .[] as $x ("$"; . + (if ($x|type) == "number" then "[\($x)]" else ".\($x)" end))')
            printf '       ║ @ %s\n' "$path_label"
            printf '%s\n' "$record" | jq -r --argjson p "$path_json" 'getpath($p)' | awk '{ printf "       ║   %s\n", $0 }'
        done < "$paths_tmp"

        rm -f "$paths_tmp"
    }

    case "$f" in
        *.jsonl|*.ndjson|*.jsonlines)
            view_jsonl_file "$f" ;;
        *.jsonl.gz|*.ndjson.gz|*.jsonlines.gz)
            gzip -dc "$f" | view_jsonl_stream "${f%.gz}" ;;
        *.jsonl.br|*.ndjson.br|*.jsonlines.br)
            brotli -dc "$f" | view_jsonl_stream "${f%.br}" ;;
        *)
            case "$mime" in
                application/gzip)
                    gzip -dc "$f" | view_stream "${f%.gz}" ;;
                application/brotli|application/x-brotli)
                    brotli -dc "$f" | view_stream "${f%.br}" ;;
                application/json|application/x-ndjson)
                    view_file "$f" ;;
                text/*)
                    view_file "$f" ;;
                *) # Default case for binary or other non-text files
                    case "$f" in
                        *.br)
                            brotli -dc "$f" | view_stream "$f" ;;
                        *)
                            if command -v hexyl >/dev/null 2>&1; then
                                hexyl "$f" | less -R
                            elif command -v xxd >/dev/null 2>&1; then
                                warn "hexyl not found; using xxd"
                                xxd -l 4096 "$f" | less -R
                            else
                                warn "hexyl not found; using less"
                                less -R "$f"
                            fi ;;
                    esac ;;
            esac ;;
    esac
}}

cmd openless ${{
    set -f
    less -R -- $fx
}}

cmd editnvim ${{
    set -f
    nvim -- $fx
}}

map i openless
map e editnvim

